<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/navbackground"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingStart="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatarUser"
        style="@style/CircleShapeImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/white"
        android:padding="5dp"
        app:srcCompat="@drawable/logo_hike"
        app:strokeColor="@color/green3"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:text="Hike Mate"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="10dp"
        android:text="@string/the_best_choice_for_your_hiking_journey"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="italic" />

</LinearLayout>